extends ../_template

block variables
  - var title = 'Works'


block content
  .container
      include ../modules/_sandwich
  .wrapper.works-page
    header.header.header_center-svg
      .container.header__container
        .header__top-line
          include ../modules/_social
        .header__content
          +avatar("avatar-small.png","Моё фото","Моё фото")
          h1.total-title Александр Полянский
          small.total-text Личный сайт веб разработчика
      .down-click
        i.down-click__ico.i-arrow-down
    .page-content
      .triangle
        include ../core/_svg
      section.s-works
        .container
          h2.title.title--context.title--my-works Мои работы
      section.s-slider
        include ../modules/_slider
      section.s-about
        .container
          h2.title.title--context.title--about-say Что обо мне говорят
          include ../modules/_recall
          .cover.cover_s-about
            .title.title--cover_about-say Связаться со мной
            form(method="",action="#").form.form_about-say
              .form__item
                input(type='text' name='name' placeholder='Имя').form__input
              .form__item
                input(name='email' type='text' placeholder="Email").form__input
              .form__item
                textarea(name='text' placeholder="Ваше сообщение").form__textarea
              .buttons.buttons_about-me
                .buttons__wrap
                  button(type="submit").buttons__item
                    span.buttons__text Отправить
                .buttons__wrap
                  button(type="reset").buttons__item
                    span.buttons__text Очистить
          .up-click
            i.up-click__ico.i-arrow-up
        include ../modules/_footer
    

